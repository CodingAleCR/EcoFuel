<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="info.codingalecr.ecofuel">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ReFuelApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activities.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.FuelListActivity"
            android:label="@string/refuels_title"
            android:parentActivityName=".views.activities.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.codingalecr.ecofuel.views.activities.MenuActivity"/>
        </activity>
        <activity
            android:name=".views.activities.RefuelDetailActivity"
            android:label="@string/refuels_title"
            android:parentActivityName=".views.activities.FuelListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.codingalecr.ecofuel.views.activities.FuelListActivity"/>
        </activity>
        <activity
            android:name=".views.activities.FuelItemFormActivity"
            android:label="@string/add_refuel"
            android:parentActivityName=".views.activities.FuelListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.codingalecr.ecofuel.views.activities.FuelListActivity"/>
        </activity>
        <activity
            android:name=".views.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".views.activities.MenuActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.codingalecr.ecofuel.views.activities.MenuActivity"/>
        </activity>
    </application>

</manifest>